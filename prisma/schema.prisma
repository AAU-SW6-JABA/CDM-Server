generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model antennas {
  aid         Int           @id @default(autoincrement())
  // X and Y coordinates of the antenna
  x           Float
  y           Float
  measurement measurement[]
}

model calculation {
  imsi     String
  calctime Float
  mid      Int

  measurement measurement @relation(fields: [mid], references: [mid], onDelete: NoAction, onUpdate: NoAction)
  location    location    @relation(fields: [imsi, calctime], references: [imsi, calctime], onDelete: NoAction, onUpdate: NoAction)

  @@id([imsi, calctime, mid])
}

model location {
  imsi        String
  calctime    Float
  x           Float
  y           Float
  calculation calculation[]

  @@id([imsi, calctime])
}

model measurement {
  mid         Int    @id @default(autoincrement())
  imsi        String
  aid         Int    @db.SmallInt
  timestamp   Float
  strengthDBM Float

  antennas    antennas      @relation(fields: [aid], references: [aid], onDelete: NoAction, onUpdate: NoAction)
  calculation calculation[]
}
